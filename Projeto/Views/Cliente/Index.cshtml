@model IEnumerable<Projeto.Models.ClienteModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table table-divider table-striped table-sm table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td class="text-center">    @*  *@
            <button type="button" class="btn btn-info"> @Html.ActionLink("Editar", "Edit", new { id = item.Id }) </button>
            <button type="button" class="btn btn-warning"> @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) </button>
            <button type="button" class="btn btn-danger">@Html.ActionLink("Deletar", "Delete", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
